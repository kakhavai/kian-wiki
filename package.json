{
  "name": "rest",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "babel src -d dist",
    "start": "npm run build && dumb-init node dist/server/index.js",
    "start-dev": "nodemon src/server --exec babel-node",
    "docker:build": "docker-compose up --build",
    "docker:up": "docker-compose up",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "lint": "eslint src/ --fix",
    "test": "jest --runInBand --verbose --passWithNoTests",
    "coverage": "jest --runInBand --verbose --collect-coverage --passWithNoTests",
    "create-db": "sequelize-cli db:create",
    "drop-db": "sequelize-cli db:drop",
    "apply-migrations": "sequelize-cli db:migrate",
    "revert-migrations": "sequelize-cli db:migrate:undo:all",
    "apply-seeders": "sequelize-cli db:seed:all",
    "revert-seeders": "sequelize-cli db:seed:undo:all"
  },
  "dependencies": {
    "@admin-bro/express": "^3.1.0",
    "@admin-bro/sequelize": "^1.2.1",
    "admin-bro": "^3.2.5",
    "clean": "^4.0.2",
    "cookie-parser": "~1.4.4",
    "dayjs": "^1.10.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "~4.16.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.1",
    "express-validation": "^3.0.6",
    "http-errors": "~2.0.0",
    "http-status": "^1.5.0",
    "morgan": "~1.9.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.12.5",
    "sqlite3": "^4.2.0",
    "swagger-ui-express": "^4.1.6",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.13",
    "babel-jest": "^27.4.6",
    "babel-plugin-module-resolver": "^4.1.0",
    "debug": "^4.3.1",
    "faker": "^5.1.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!**/tests/**",
      "!**/utils/**",
      "!**/**test**",
      "!**/middlewares/**"
    ],
    "testPathIgnorePatterns": [
      "/.imagine/",
      "<rootDir>/dist/"
    ]
  }
}
